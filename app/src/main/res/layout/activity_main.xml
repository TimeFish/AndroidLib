<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xy.androidlib.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lanuch_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动SecondActivity"
        android:textAppearance="?android:textAppearance"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_lanuch_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动ResultActivity"
        android:textAppearance="?android:textAppearance"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanuch_second"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_lanuch_second"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_lanuch_second" />

    <Button
        android:id="@+id/btn_simple_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimpleNotification"
        android:textAppearance="?android:textAppearance"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanuch_result"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_lanuch_second"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_lanuch_second" />

    <Button
        android:id="@+id/btn_style_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StyleNotification"
        android:textAppearance="?android:textAppearance"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple_noti"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_simple_noti"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_simple_noti" />
</android.support.constraint.ConstraintLayout>
